#!/usr/bin/env bash
# Copyright (C) oxidio. See LICENSE file for license details.

function main() {
    local base
    [[ $1 ]] && base=$1 || base=${PWD}

    [[ -f ${base}/.env ]] || {
        echo "create .env file"
        local var value vars
        declare -A vars=(
            ['DB_HOST']='db host'
            ['DB_NAME']='db name'
            ['DB_USER']='db user'
            ['DB_PASSWORD']='db password'
            ['DB_STATE']='db state (e.g. migration)'
            ['SHOP_URL']='shop url'
        )
        for var in "${!vars[@]}"; do
            read -p "${vars[$var]} (${!var}): " value
            value=${value:-${!var}}
            echo "${var}=${value}" >> ${base}/.env
        done
    }
    return 0;
}

main $@
